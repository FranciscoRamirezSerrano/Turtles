<configuration>

            <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
                <encoder>
                    <pattern>%d{yy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %msg%n</pattern>
                </encoder>
            </appender>

            <logger name="game" level="INFO">
                <appender-ref ref="STDOUT" />
            </logger>
    <logger name="ai" level="WARN">
                <appender-ref ref="STDOUT" />
            </logger>
            <logger name="resources" level="WARN">
                <appender-ref ref="STDOUT" />
            </logger>
            <logger name="events" level="OFF">
            </logger>
</configuration>